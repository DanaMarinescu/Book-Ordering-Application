<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.CurrentOrdersController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints prefWidth="600.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints maxHeight="400.0" minHeight="400.0" prefHeight="400.0" />
      <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TableView fx:id="currentOrders" prefHeight="282.0" prefWidth="500.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <columns>
          <TableColumn fx:id="bookTitle" prefWidth="160.0" text="Book Title" />
            <TableColumn fx:id="authorName" prefWidth="90.0" text="Author" />
          <TableColumn fx:id="year" prefWidth="60.0" text="Year" />
            <TableColumn fx:id="price" prefWidth="60.0" text="Price" />
            <TableColumn fx:id="status" prefWidth="70.0" text="Status" />
            <TableColumn fx:id="stock" prefWidth="60.0" text="Stock" />
        </columns>
      </TableView>
      <Button mnemonicParsing="false" onAction="#rejectOrder" prefHeight="30.0" prefWidth="130.0" text="Reject" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets top="70.0" />
         </GridPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#acceptOrder" prefHeight="30.0" prefWidth="130.0" text="Accept" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets top="30.0" />
         </GridPane.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#goBack" prefHeight="30.0" prefWidth="130.0" text="Back" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets top="300.0" />
         </GridPane.margin>
      </Button>
      <TextField fx:id="orderAccept" prefHeight="60.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets top="-80.0" />
         </GridPane.margin>
      </TextField>
   </children>
</GridPane>
